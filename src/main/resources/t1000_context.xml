<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"

       default-lazy-init="true"
>

    <import resource="sony_context.xml"/>
    <import resource="toshiba_context.xml"/>
    <import resource="db_context.xml"/>

    <bean id="replacer" class="com.fantasy.replacer.Replacer"/>

    <bean id="t1000" class="com.fantasy.impls.robot.ModelT1000"
          parent="baseModel"
          scope="prototype"
    >
        <!--<replaced-method name="action" replacer="replacer"/>-->

        <constructor-arg value="silver" index="3"/>
        <constructor-arg value="2006" index="4"/>
        <constructor-arg value="true" index="5"/>
    </bean>

    <bean id="baseModel" class="com.fantasy.impls.robot.ModelT1000"
          abstract="true"
    >

        <constructor-arg ref="sonyHand" index="0"/>
        <constructor-arg ref="sonyLeg" index="1"/>
        <constructor-arg ref="toshibaHead" index="2"/>

        <property name="hand" ref="toshibaHand"/>
    </bean>

    <bean id="t1000Pool" class="com.fantasy.impls.pool.T1000Pool">
        <constructor-arg name="robotCollection">
            <map>
                <entry key="2005" value-ref="t1000"/>
                <entry key="2006" value-ref="t1000"/>
                <entry key="2005">
                    <bean class="com.fantasy.impls.robot.ModelT1000"
                          parent="baseModel"
                    >
                        <constructor-arg value="gold" index="3"/>
                        <constructor-arg value="2007" index="4"/>
                        <constructor-arg value="false" index="5"/>
                    </bean>
                </entry>
            </map>
<!--            <list>
                <ref bean="t1000"/>
                <bean class="com.fantasy.impls.robot.ModelT1000"
                      parent="baseModel"
                      scope="prototype"
                >
                    <constructor-arg value="gold" index="3"/>
                    <constructor-arg value="2007" index="4"/>
                    <constructor-arg value="false" index="5"/>
                </bean>
            </list>-->
        </constructor-arg>
    </bean>


</beans>